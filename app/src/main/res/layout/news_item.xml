<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="4dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:background="@drawable/rounded_edge_white"
        card_view:cardElevation="2dp">


        <LinearLayout
            android:id="@+id/item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/news_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:text="COPS OPC 1"
                    android:textColor="@color/text_color_dark"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <!--<ImageView-->
                <!--android:id="@+id/type_view"-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:padding="4dp"-->
                <!--android:src="@drawable/ic_collections_black_24dp"/>-->

            </LinearLayout>

            <TextView

                android:id="@+id/news_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:text="Title"
                android:textColor="@color/text_color_light"
                android:textSize="14dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/news_stream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/tag_layout"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:text="Gymkhana"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/news_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/tag_layout"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:text="RoboHunt '15"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/video_box"
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/news_video"
                        android:layout_width="match_parent"
                        android:layout_height="208dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wallpaper"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="208dp"
                        android:background="@color/transparent_light"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_play_circle_outline_white_24dp" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/news_image_1"
                                android:layout_width="0dp"
                                android:layout_height="156dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/wallpaper"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/news_image_2"
                                android:layout_width="0dp"
                                android:layout_height="156dp"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/wallpaper"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/news_image_3"
                                android:layout_width="0dp"
                                android:layout_height="156dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/wallpaper"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/news_image_4"
                                android:layout_width="0dp"
                                android:layout_height="156dp"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/wallpaper"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/more_count_container"
                        android:layout_width="match_parent"
                        android:layout_height="314dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/more_count"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:background="@drawable/count_label"
                            android:gravity="center"
                            android:text="+ 4"
                            android:textSize="24dp" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
            <!--<ImageView-->
            <!--android:id="@+id/news_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="180dp"-->
            <!--android:scaleType="centerCrop"-->

            <!--android:src="@drawable/wallpaper"-->

            <!--android:layout_marginBottom="4dp"/>-->


            <TextView
                android:id="@+id/news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:autoLink="all"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:text="Description of the news item to be displayed ription of the news item to be displayed Description of the news item to be displayed Description of the news item to be displayed"
                android:textColor="@color/text_color_light"
                android:textColorLink="@color/text_color_light"
                android:textSize="12dp" />
            <!--<WebView-->
            <!--android:id="@+id/news_description"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:layout_marginBottom="4dp"-->
            <!--android:textSize="12dp"-->
            <!--android:layout_marginLeft="8dp"-->
            <!--android:layout_marginRight="8dp"/>-->
            <TextView
                android:id="@+id/news_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:autoLink="web"
                android:ellipsize="end"
                android:focusable="false"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:text="http://infistart.com/streamify.php"
                android:textColorLink="@color/text_color_light"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/news_author_image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:focusable="false"
                    android:src="@drawable/ic_person_outline_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="4dp">

                    <TextView
                        android:id="@+id/news_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:text="Author Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/news_ago"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:text="2 days ago"
                        android:textColor="@color/text_color_light"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/text_color_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/like_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/news_like_image"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_thumb_up_white_24dp" />

                    <TextView
                        android:id="@+id/news_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="24"
                        android:textSize="14dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/dislike_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/news_dislike_image"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_thumb_down_white_24dp" />

                    <TextView
                        android:id="@+id/news_dislike_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="36"
                        android:textSize="14dp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>